<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_banner"
                android:name="com.example.wanandroid.ui.home_page.banner.BannerFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_article"
                android:name="com.example.wanandroid.ui.home_page.article.ArticleFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</LinearLayout>